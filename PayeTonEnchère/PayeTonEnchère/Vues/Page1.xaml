<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PayeTonEnchère.Vues.Page1">
    <ContentPage.Content>
        <ScrollView
            VerticalOptions="StartAndExpand">
            <Grid>
                <BoxView>
                    <BoxView.Background>
                        <LinearGradientBrush>
                            <GradientStop Color="AntiqueWhite" Offset="2"/>
                            <GradientStop Color="WhiteSmoke" Offset="3"/>
                        </LinearGradientBrush>
                    </BoxView.Background>

                </BoxView>

                <StackLayout VerticalOptions="StartAndExpand" HorizontalOptions="Center" Margin="0,150,0,0" >
                    <Label Text="Paye Ton Enchère"
                           TextColor="CadetBlue"
                           FontSize="Title"
                           />
                </StackLayout>
            </Grid>
        </ScrollView>

    </ContentPage.Content>
</ContentPage>